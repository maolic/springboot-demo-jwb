<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.springbootdemo.dao.TodolistDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.example.springbootdemo.entity.TodolistEntity" id="userMap">
        <result property="id" column="id"/>
        <result property="text" column="text"/>
    </resultMap>
    <insert id="add">
        INSERT INTO todolist (text) VALUES (#{text})
    </insert>

    <delete id="delete">
        DELETE FROM todolist
        WHERE id = #{id}
    </delete>

    <update id="update">
        UPDATE todolist SET text = #{text}
        WHERE id = #{id}
    </update>

    <select id="equal" resultType="com.example.springbootdemo.entity.TodolistEntity">
        SELECT id, text FROM todolist
        WHERE text = #{text}
    </select>

    <select id="like" resultType="com.example.springbootdemo.entity.TodolistEntity">
        SELECT id, text FROM todolist
        WHERE text LIKE CONCAT('%',#{text},'%')
    </select>

    <select id="all" resultType="com.example.springbootdemo.entity.TodolistEntity">
        SELECT id, text FROM todolist
    </select>
</mapper>
